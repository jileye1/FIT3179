{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "albersUsa"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/js/us_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "us_states.topojson"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/js/us_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "us_states.topojson"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/data/crimes_by_state.csv"
            },
            "key": "State",
            "fields": [
              "Violent"
            ]
          }
        },
        {
          "calculate": "datum.Violent",
          "as": "Violent Crime Rate"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Violent Crime Rate",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              200,
              600,
              800,
              1000
            ],
            "range": [
              "#fdbe85",
              "#fd8d3c",
              "#e6550d",
              "#a63603"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Violent Crime Rate",
            "type": "quantitative"
          }
        ]
      }
    }
  ]
}