{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "US Violent Crime Rate",
  "width": 500,
  "height": 400,
  "layer": [
    {
      "data": {
        "name": "states",
        "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/js/us-10m.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        },
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/js/usa_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "us_states.topojson"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jileye1/FIT3179/main/data/crime_by_agency.csv"
            },
            "key": "agency_jurisdiction",
            "fields": [
              "crimes_percapita"
            ]
          }
        },
        {
          "calculate": "datum.crimes_percapita",
          "as": "Crimes Per Capita"
        }
      ],
      "projection": {
        "type": "equirectangular"
      },
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Crimes Per Capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              20,
              40,
              60,
              80
            ],
            "range": [
              "#fdbe85",
              "#fd8d3c",
              "#e6550d",
              "#a63603"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Crimes Per Capita",
            "type": "quantitative"
          }
        ]
      }
    }
  ]
}